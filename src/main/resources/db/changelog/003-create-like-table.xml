<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="003-create-like-table" author="Murad">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="like"/>
            </not>
        </preConditions>
        <createTable tableName="like">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="comment_id" type="bigint"/>
            <column name="time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="like"
                baseColumnNames="user_id"
                referencedTableName="user"
                referencedColumnNames="id"
                constraintName="fk_like_user"/>

        <addForeignKeyConstraint
                baseTableName="like"
                baseColumnNames="post_id"
                referencedTableName="post"
                referencedColumnNames="id"
                constraintName="fk_like_post"/>

        <addForeignKeyConstraint
                baseTableName="like"
                baseColumnNames="comment_id"
                referencedTableName="comment"
                referencedColumnNames="id"
                constraintName="fk_like_comment"/>
    </changeSet>
</databaseChangeLog>

